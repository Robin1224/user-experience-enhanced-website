<li class="house-card">
  <a href="/house/<%= house.id %>">
    <form method="post" action="/delete/<%= house.id %>">
      <button type="submit" class="delete-house"><%- include('./icons/cross-icon') %></button>
    </form>
    <img
      src="https://fdnd-agency.directus.app/assets/<%= house.poster_image.id %>"
      alt="<%= house.title %>"
      height="<%= house.poster_image.height %>"
      width="<%= house.poster_image.width %>"
    />
    <div>
      <h2><%= house.street %> <%= house.house_nr %></h2>
      <span class="price">â‚¬<%= house.price %></span>
      <span class="underlined">Bekijken</span>
      <form class="rating-form" method="POST" data-current-rating="<%- Math.floor(Math.random() * 6) %>">
        <button type="submit" formaction="/rate/<%= house.id %>/1"><%- include('./icons/star-icon') %></button>
        <button type="submit" formaction="/rate/<%= house.id %>/2"><%- include('./icons/star-icon') %></button>
        <button type="submit" formaction="/rate/<%= house.id %>/3"><%- include('./icons/star-icon') %></button>
        <button type="submit" formaction="/rate/<%= house.id %>/4"><%- include('./icons/star-icon') %></button>
        <button type="submit" formaction="/rate/<%= house.id %>/5"><%- include('./icons/star-icon') %></button>
      </form>
    </div>
  </a>
</li>
